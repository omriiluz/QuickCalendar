<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center_vertical|center_horizontal"
	android:layout_width="280sp" android:layout_height="300sp">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="18sp"
		android:layout_gravity="fill_horizontal" android:text="Version x.x.x"
		android:id="@+id/VersionText" android:padding="8sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="16sp"
		android:text="@string/about_text" android:padding="8sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="12sp"
		android:text="@string/art_credit" android:padding="8sp" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="12sp"
		android:text="@string/license_text" android:padding="8sp" />

	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/visit_website"
		android:id="@+id/VisitWebsite"/>
</LinearLayout>