<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_horizontal">
	<LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<net.jimblackler.androidcommon.NumberPicker
			android:id="@+id/NumberPicker" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Spinner android:id="@+id/choose_list" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:prompt="@string/units"
			android:entries="@array/duration_units"/>

	</LinearLayout>

</LinearLayout>
